<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs4720.cs.virginia.edu.sharearide.EventListActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host New Event"
        android:id="@+id/hostEventButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/abc_button_inset_horizontal_material"
        android:layout_marginStart="33dp"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:onClick="createEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logOutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/abc_button_padding_horizontal_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:onClick="logOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_list_banner"
        android:id="@+id/textView3"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/hostEventButton"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_menu_material" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventsListView"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/abc_dialog_padding_top_material"
        android:background="#696969"
        android:layout_alignLeft="@+id/hostEventButton"
        android:layout_alignRight="@+id/logOutButton"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
